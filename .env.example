# Long random token for Bearer auth to protect /api endpoints
BEARER_TOKEN=CHANGE-ME

# CORS: comma-separated list of allowed origins, or * for all
CORS_ORIGINS=*

# Turn on verbose debug logs (true/false)
DEBUG=false



# R2 S3 endpoint (account-specific)
# Example: https://<accountid>.r2.cloudflarestorage.com
S3_ENDPOINT=CHANGE-ME

# Region for S3 client. R2 accepts "auto"
S3_REGION=auto

# Target bucket and an optional prefix/folder inside that bucket
S3_BUCKET=CHANGE-ME
S3_PREFIX=CHANGE-ME

# Access keys for R2 token with read/write permissions on the bucket
S3_ACCESS_KEY_ID=CHANGE-ME
S3_SECRET_ACCESS_KEY=CHANGE-ME

# Force path-style addressing (R2 generally requires this)
# true/false as a string
S3_PATH_STYLE=true


# =========================
# Restic Configuration
# =========================

# Password for the restic repository
RESTIC_PASSWORD=CHANGE-ME

# Path to backup
BACKUP_PATH=/var/lib/pterodactyl

# Comma-separated exclude patterns passed to restic --exclude
EXCLUDE_PATTERNS=*.tmp,*.log,cache/*,logs/*,node_modules/*

# Retention policy used by "restic forget --prune"
# this example has a 7 day data retention
KEEP_LAST=0
KEEP_DAILY=7
KEEP_WEEKLY=0
KEEP_MONTHLY=0


# =========================
# Notifications (Discord)
# =========================
# Optional: Discord webhook to receive backup start/finish notifications.
# If unset or empty, notifications are disabled.
# Get one from: Server Settings -> Integrations -> Webhooks
DISCORD_WEBHOOK_URL=CHANGE-ME